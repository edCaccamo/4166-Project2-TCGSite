<%- include('../partials/header.ejs') %>

    <!-- Main Content Section -->
    <main class="main-content">
        <div class="seperator"></div>
        <div class="new-main">
            <div class="new-main-text">
                <h1>Edit your Listing</h1>
                <h2>Made a mistake in the Listing? Make changes here.</h2>
                <h2>!! All offers will be cancelled !!</h2>
            </div>
            <div class="form-container">
                <form method="POST" action="/listings/<%= listing.id %>?_method=PUT" enctype="multipart/form-data"
                    class="new-form">
                    <!-- Condition -->
                    <div class="form-group">
                        <label for="quality">Condition <span style="color:red">*</span></label>
                        <select name="quality" id="quality" required value="<%= listing.quality %>">
                            <option value="" disabled>-- Select Condition --</option>
                            <option value="Near Mint" <%=listing.quality==='Near Mint' ? 'selected' : '' %>>Near Mint
                            </option>
                            <option value="Lightly Played" <%=listing.quality==='Lightly Played' ? 'selected' : '' %>
                                >Lightly Played</option>
                            <option value="Moderately Played" <%=listing.quality==='Moderately Played' ? 'selected' : ''
                                %>>Moderately Played</option>
                            <option value="Heavily Played" <%=listing.quality==='Heavily Played' ? 'selected' : '' %>
                                >Heavily Played</option>
                            <option value="Graded (Specify in Description)" <%=listing.quality==='Graded' ? 'selected'
                                : '' %>>Graded (Specify in
                                Details/Title)</option>
                        </select>
                    </div>

                    <!-- Title -->
                    <div class="form-group">
                        <label for="name">Title <span style="color:red">*</span></label>
                        <input type="text" id="name" name="name" value="<%= listing.name %>" required>
                    </div>

                    <!-- Set -->
                    <div class="form-group">
                        <label for="set">Set/Expansion <span style="color:red">*</span></label>
                        <input type="text" id="set" name="set" value="<%= listing.set %>" required>
                    </div>

                    <!-- Seller -->
                    <div class="form-group">
                        <label for="seller">Seller <span style="color:red">*</span></label>
                        <input type="text" id="seller" name="seller" value="<%= listing.seller %>" required>
                    </div>

                    <!-- Price -->
                    <div class="form-group">
                        <label for="price">Price ($) <span style="color:red">*</span></label>
                        <input type="number" id="price" name="price" value="<%= listing.price %>" step="0.01" min="0"
                            required>
                    </div>

                    <!-- Details -->
                    <div class="form-group">
                        <label for="description">Description <span style="color:red">*</span></label>
                        <textarea id="description" name="description" required><%= listing.description %></textarea>
                    </div>

                    <!-- Image Upload -->
                    <div class="form-group">
                        <label for="image">Image </label>
                        <input type="file" id="image" name="image" accept="image/*">
                    </div>

                    <!-- Submit Button -->
                    <div class="form-actions">
                        <button type="submit">Submit Listing</button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>